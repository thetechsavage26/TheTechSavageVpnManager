#!/bin/bash
clear
CONFIG="/usr/local/etc/xray/config.json"

# --- COLORS & FORMATTING ---
RED='\033[0;31m'
NC='\033[0m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'

echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${ORANGE}          RENEW VLESS USER                ${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# 1. CHECK & LIST USERS
if [[ $(grep -c "// #vl " "$CONFIG") == '0' ]]; then
    echo -e "${RED}Error: No VLESS clients found!${NC}"
    read -n 1 -s -r -p "Press any key to back on menu"
    menu-vless.sh
    exit 1
fi

echo -e " NO   USER          EXPIRES"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
grep -E "// #vl " "$CONFIG" | awk '{printf " %-4s %-13s %-10s\n", NR".", $3, $4}'
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

read -p " Select Number : " num

# 2. IDENTIFY USER & CURRENT EXPIRY
user=$(grep -E "// #vl " "$CONFIG" | awk -v line="$num" 'NR==line {print $3}')
exp=$(grep -E "// #vl " "$CONFIG" | awk -v line="$num" 'NR==line {print $4}')

if [[ -z "$user" ]]; then
    echo -e "${RED}Error: Invalid selection.${NC}"
    sleep 1
    renew-vless.sh
    exit 1
fi

# 3. INPUT DAYS
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
read -p " Add Days      : " masaaktif

# 4. CALCULATE NEW EXPIRY
now=$(date +%Y-%m-%d)
d1=$(date -d "$exp" +%s)
d2=$(date -d "$now" +%s)

# Logic: If expired (d1 < d2), renew from TODAY. If active, extend from EXPIRY.
if [[ $d1 -ge $d2 ]]; then
    new_exp=$(date -d "$exp + $masaaktif days" +"%Y-%m-%d")
else
    new_exp=$(date -d "$masaaktif days" +"%Y-%m-%d")
fi

# 5. APPLY UPDATE (NEVERMORE LOGIC)
# This updates the comment in the config file
sed -i "s/// #vl $user $exp/// #vl $user $new_exp/g" "$CONFIG"

# Restart Service
systemctl restart xray

# 6. SUCCESS BANNER
clear
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${ORANGE}       VLESS RENEWAL SUCCESS       ${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e " Username    : ${GREEN}$user${NC}"
echo -e " Days Added  : ${GREEN}$masaaktif Days${NC}"
echo -e " Old Expiry  : ${RED}$exp${NC}"
echo -e " New Expiry  : ${GREEN}$new_exp${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
read -n 1 -s -r -p "Press any key to back on menu"
menu-vless.sh
